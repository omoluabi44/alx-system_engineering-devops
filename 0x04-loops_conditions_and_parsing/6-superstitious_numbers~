#!/usr/bin/env bash
# This script displays "Best School" 10 times using a while loop

# Initializing counter

i=1

while [ $i -lt 21 ]
do
    if [ $i -eq 8 ]
    then
	echo $i
	echo "bad luck from Japan"
    elif [ $i -eq 3 ]
    then
	echo $i
	echo "bad luck from China"
    elif [ $i -eq 16 ]
    then
	echo $i
	echo "bad luck from Italy"
    else
	echo $i
    fi
	((i++))
done
